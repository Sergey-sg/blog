      <div class="col-2">
        <h5>{{ _('Партнеры') }} </h5>
      </div>
      <div class="col-9">
          {% for item in menu_items %}
             {% if item.position == 'f' %}
                <a class="text-muted" href="{{ item.item_url }}" target="{{ item.target }}">{{ item.title }}</a>
             {% endif %}
          {% endfor %}
      </div>
    </div>

    <div class="border-top"></div>
    <br>
      <p class="text-center">© 2022 <a href="#">{{ _('Сергей Глушак')}}</a>, {{ _('Все права защищены.') }}</p>
  </footer>
</div>