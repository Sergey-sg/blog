{% extends 'base.jinja2' %}

{% block title %}{{ _('Изменение комментария') }}{% endblock title %}

{% block content %}
    <div class="container" style="padding-bottom: 30px">
        <form action="" method="post">
            {% csrf_token %}
            <table>
                <tr>{{_('Измените свой отзыв')}}:<br>{{ form.as_p }}</tr>
                 {{ form.media }}
            </table>
            <input class="btn btn-primary text-black" type="submit" value="{{_('изменить комментарий')}}">
        </form>
    </div>
{% endblock content %}